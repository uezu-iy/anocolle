<header>
  <nav class="navbar navbar-expand-lg navbar-dark p-2 header">
    <%= link_to home_index_path, class: "navbar-brand" do %>
      <i class="fas icon"></i>anocolle
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <%= link_to root_path, class: "nav-link" do %>
              <i class="fas fa-user icon"></i>異常一覧
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to users_path(current_user), class: "nav-link" do %>
              <i class="fas fa-user icon"></i>マイページ
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
              <i class="fas fa-sign-out-alt icon"></i>ログアウト
            <% end %>
          <li>
        </ul>
      <% else %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <%= link_to new_user_registration_path, class: "nav-link" do %>
              <i class="fas fa-user-plus icon"></i>ユーザー登録
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to new_user_session_path, class: "nav-link" do %>
              <i class="fas fa-sign-in-alt icon"></i>ログイン
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class:'nav-link' %>
          </li>
        </ul>
      <% end %>  
    </div>
  </nav>
</header>
