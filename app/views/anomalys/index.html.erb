<div class="container-fluid">
  <div class="row">
    <div class="col-12 text-center">
      <h2>異常一覧</h2>
    </div>
  </div>

  <% if user_signed_in? %>
    <div class="col offset-md-10 post-form">
      <%= link_to '投稿する', new_anomaly_path, class:'btn btn-outline-post' %>
    </div>
  <% end %>

  <div class="col-xs-12">
    <%= search_form_for @q, url: anomalys_path do |f| %>
      <div class="input-group">
        <%= f.search_field :title_cont, class: "form-control search-form-control col-md-5 offset-md-3 ", placeholder: 'キーワードを入力'  %>
          <span class="input-group-btn">
            <%= f.button type: :submit, class: "btn-search" do %>
              <i class="bi bi-search"></i>
            <% end %>
          </span>
      </div>
    <% end %>
  </div>

  <% @tag_list.each do |list|%>
    <div class="anomaly-tags">
      <i class="bi bi-tag"></i>
      <%=link_to list.tag_name, search_tag_path(tag_id: list.id) %>
      <%="(#{list.anomalys.count})" %>
    </div>
  <% end %>

  <% @anomalys.each do |anomaly| %>  
    <div class="col-xs-12 anomalys">
      <div class="row">
        <div class="anomaly text-break">
          <div class="anomaly-header">
            <%= link_to "#{anomaly.user.name}", users_path(anomaly.user.id), class:"erb-link" %>
            <%= "が#{anomaly.created_at.strftime('%Y/%m/%d %H:%M')}に投稿" %>
          </div>
          <table>
            <thead>
              <tr align="center">
                <th>タイトル</th>
                <th>確認</th>
                <th>編集</th>
                <th>削除</th>
              </tr>
            </thead>  
              <tbody>
                <tr>
                  <td>
                    <%= anomaly.title %>
                  </td>
                  <td>
                    <%= link_to "確認", anomaly %>
                  </td>
                  <td>
                    <%= link_to "編集", [:edit, anomaly] %>
                  </td>
                  <td>
                    <%= link_to "削除", anomaly, method: :delete, data: { confirm: "本当に削除しますか？" } %>
                  </td>
                </tr>
                <div class="anomaly-content">
                  <h4><%= link_to "#{anomaly.title}", anomaly_path(anomaly), class:"btn-block a-link" %></h4>
                </div>
              </tbody>
          </table>
        </div>
      </div>
    </div>      
  <% end %>
  <%= paginate @anomalys %>
</div>
