<div class="container-fiuld">
  <div class="row user-nav">
    <div class="col-2 offset-md-1 user-nav-a">
      <%= link_to "アカウント",users_path, class:"user-text" %>
    </div>
    <div class="col-2 ">
      <%= link_to "投稿履歴",user_path(current_user.id), class:"user-text" %>
    </div>
  </div>
    
  <div class="col-md-10 user-view offset-md-1">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>アカウント</h5>
          </div>
        </div>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="update-content">
        <div class="row">
          <%= f.label :メールアドレス,class:"col-md-3" %><br />
          <div class="col-md-9"><%= @user.email %></div>
        </div>
      </div>
                
      <div class="update-content">
        <div class="row">
          <%= f.label :パスワード,class:"col-md-3" %><br />
          <div class="col-md-9">********</div>
        </div>
      </div>

      <div class="update-content">
        <div class="row">
          <%= link_to "編集", edit_user_registration_path,class:"col-md-11 btn btn-primary mx-4"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
